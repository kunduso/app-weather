@page
@model IndexModel
@{
    ViewData["Title"] = "Weather App";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Weather Lookup</h2>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Location">Enter City:</label>
                            <input type="text" class="form-control" asp-for="Location" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3">Get Weather</button>
                    </form>

                    @if (Model.Weather != null)
                    {
                        <div class="mt-4">
                            <div class="alert alert-success">
                                <h4>Weather for @Model.Weather.Location</h4>
                                <p class="mb-0">Temperature: @Model.Weather.Temperature°@Model.Weather.Unit</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            @Model.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>